<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="view_hr_payslip_load_inputs" model="ir.ui.view">
            <field name="name">hr_payroll_payslip_load_inputs</field>
            <field name="model">hr.payslip.load.inputs</field>
            <field name="arch" type="xml">
                <form string="Load Payslips from inputs file">
                    <header>
                        <button icon="gtk-cancel" special="cancel" string="Cancel"/>
                        <button  icon="gtk-execute" string="Load file" name="load_inputs" type="object"/>
                        <!--button name="action_done" string="Aplicar" type="object" states="draft"/>
                        <button name="action_cancel" string="Cancelar" type="object" states="done" groups="coopetraca.group_coopetraca_admin"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done" statusbar_colors='{"cancel":"red"}'/-->
                    </header>
                    <sheet>
                        <group>
                            <!--field name="off_cycle_new_hires"/-->
                            <field name="input_file"/>
                            <field name="run_days"/>
                            <field name="previous_payroll_date"/>
                            <field name="append_inputs"/>
                            <field name="overwrite_payslip_run_id"/>
                            <field name="from_column"/>
                            <field name="to_column"/>
                            <!--field name="name"/>
                            <field name="date"/>
                            <field name="id" invisible="1"/-->
                        </group>
                    </sheet>
               </form>
            </field>
        </record>

        <record id="action_hr_payslip_load_inputs" model="ir.actions.act_window">
            <field name="name">Load Payslips from inputs file</field>
            <field name="res_model">hr.payslip.load.inputs</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_hr_payslip_load_inputs"/>
            <field name="target">new</field>
        </record>

        <record id="hr_payslip_load_inputs_form" model="ir.ui.view">
            <field name="name">hr.payslip.load.inputs.form</field>
            <field name="model">hr.payslip.run</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="hr_payroll_community.hr_payslip_run_form"/>
            <field name="arch" type="xml">
                <data>
                    <field name="state" position="after">
                        <button name="%(action_hr_payslip_load_inputs)d" type="action" states="draft" icon="gtk-execute" string="Load Payslips from inputs" />
                    </field>
                </data>
            </field>
        </record>
    </data>
</odoo>
