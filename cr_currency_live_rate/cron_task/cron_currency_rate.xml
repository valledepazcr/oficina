<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="cr_currency_live_rate" model="ir.cron">
            <field name="name"> Costa Rica Currency Exchange Rate</field>
            <field name="model_id" ref="model_res_currency_rate"/>
            <field name="state">code</field>
            <field name="code">model.cron_cr_get_currency_rate()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(datetime.today() + timedelta(days=1)).strftime('%Y-%m-%d 01:00:00')"></field>
        </record>
     </data>
</odoo>